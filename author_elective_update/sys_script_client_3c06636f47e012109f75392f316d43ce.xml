        <messages/>
        <name>validate email syntax</name>
        <order/>
        <script><![CDATA[// Function to validate email format
function validateEmail(email) {
    var isEmail = validateEmailAddress(email);
    return isEmail;
}

// onSubmit Client Script
(function onSubmit() {
    var email = g_form.getValue('requester_email'); // Get the email field value

    // Validate email format
    if (!validateEmail(email)) {
        // Show an error message if the email format is invalid
        g_form.showFieldMsg('requester_email', email + ' is not a valid email address. You must provide a valid email address.', 'error');
        
        // Prevent the form from being submitted
        return false;
    }

    // Optionally update Short Description if the email is valid
    var requesterName = g_form.getValue('requester_name');
    var shortDescription = '[Namecard] - ' + requesterName + ' + ' + email;
    g_form.setValue('short_description', shortDescription);

    // Allow the form to be submitted
    return true;
})();
]]></script>
