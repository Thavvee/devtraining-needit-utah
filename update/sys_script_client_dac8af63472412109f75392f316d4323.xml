        <name>NameCard Validate syntax mail</name>
        <order/>
        <script><![CDATA[function onSubmit() {
    // ดึงค่าของฟิลด์ requester_email
    var email = g_form.getValue('requester_email');
    
    // ใช้ Regular Expression เพื่อตรวจสอบรูปแบบของอีเมล
    var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailPattern.test(email)) {
        // ถ้าอีเมลไม่ตรงตามรูปแบบที่คาดหวัง แสดงข้อความเตือนและยกเลิกการส่งฟอร์ม
        g_form.addErrorMessage('invalide email');
        return false; // ยกเลิกการส่งฟอร์ม
    }
    
    // หากผ่านการตรวจสอบ สามารถส่งฟอร์มได้
    return true;
}
]]></script>
